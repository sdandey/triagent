# =============================================================================
# Triagent Web UI - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# Azure AD OAuth Configuration (Required for MSAL authentication)
# =============================================================================

# Azure AD App Registration - Client ID
OAUTH_AZURE_AD_CLIENT_ID=57b5437c-ad58-4520-8b1b-a102ad2d9049

# Azure AD App Registration - Client Secret
# Get this from Azure Portal > App registrations > Certificates & secrets
OAUTH_AZURE_AD_CLIENT_SECRET=<your-client-secret>

# Azure AD Tenant ID
OAUTH_AZURE_AD_TENANT_ID=36da45f1-dd2c-4d1f-af13-5abe46b99921

# Single-tenant configuration (set to true for corporate environments)
OAUTH_AZURE_AD_ENABLE_SINGLE_TENANT=true

# =============================================================================
# Chainlit Configuration (Required)
# =============================================================================

# Session encryption secret - Generate with:
# python -c "import secrets; print(secrets.token_hex(32))"
CHAINLIT_AUTH_SECRET=<64-char-hex-secret>

# =============================================================================
# Dev Tunnel Configuration (Required for MSAL authentication)
# =============================================================================
# Corporate policy blocks localhost redirect URIs in Azure AD.
# Use Azure Dev Tunnels for local development.
#
# Setup (first time only):
#   brew install --cask devtunnel
#   devtunnel user login
#
# Daily workflow:
#   Terminal 1: devtunnel host triagent-team
#   Terminal 2: python start_chainlit.py

# Dev tunnel URL - get from: devtunnel show triagent-team
CHAINLIT_URL=https://4m2mfr3p-8080.use2.devtunnels.ms

# Required for cross-domain OAuth cookies
CHAINLIT_COOKIE_SAMESITE=none

# =============================================================================
# Optional: Azure AD Group Validation
# =============================================================================

# If set, only users in this Azure AD group can access the app
# Leave empty to allow all authenticated users
TRIAGENT_ALLOWED_AD_GROUP_ID=

# =============================================================================
# Triagent Configuration
# =============================================================================

# Redis configuration (for session storage)
TRIAGENT_REDIS_HOST=localhost
TRIAGENT_REDIS_PORT=6379
TRIAGENT_REDIS_PASSWORD=
TRIAGENT_REDIS_SSL=false

# Azure Container Apps Session Pool endpoint
TRIAGENT_SESSION_POOL_ENDPOINT=

# API key for programmatic access (optional)
TRIAGENT_API_KEY=

# Session timeout in seconds (default: 2 hours)
TRIAGENT_SESSION_TTL=7200

# CORS origins (comma-separated, or "*" for development)
TRIAGENT_CORS_ORIGINS=http://localhost:8080,http://localhost:8000
